@model IEnumerable<RefundSystem_University.Models.ApprovedRefundApplicationEmailCcRecipient>

@{
    ViewBag.Title = "רשימת נמענים לבקשות מאושרות";
}

<h2>נמענים לבקשות מאושרות</h2>

<p>
    <a data-toggle="modal" data-target="#approved-refund-application-email-cc-recipient-form-modal" data-dismiss="modal">הוסף חדש</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a onclick="deleteEntity(this, @item.Id, 'ApprovedRefundApplicationEmailCcRecipients')">מחק</a>
        </td>
    </tr>
}

</table>

@Html.Partial("_Modal", new RefundSystem_University.ViewModels.ModalViewModel()
{
    Type = "approved-refund-application-email-cc-recipient-form",
    Title = @"ערוך\הוסף רשומה",
    SaveFunction = "saveEntity('ApprovedRefundApplicationEmailCcRecipients', 'approved-refund-application-email-cc-recipient')",
    Body = Html.Partial("~/Views/ApprovedRefundApplicationEmailCcRecipients/_Create.cshtml", new RefundSystem_University.Models.ApprovedRefundApplicationEmailCcRecipient()).ToString()
})

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/entityFunctions.js"></script>
}