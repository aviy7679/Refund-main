@model RefundSystem_University.ViewModels.ViewError
@{
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
    ViewBag.Title = "התחברות";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("מערכת החזרים", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</div>
<div class="container body-content">
    <h2>כניסה</h2>
    <hr />
    @if (Model != null)
    {
        <div class="alert alert-danger" role="alert">
            @Model.Message
            @*<div dir="ltr">
                @Model.Exception
            </div>*@
        </div>
    }

    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">שם משתמש:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" name="username" placeholder="שם משתמש" pattern=".{3,}" maxlength="35" required title="Between 4 to 35 characters" />
            </div>
        </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">סיסמה:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="pwd" name="password" placeholder="סיסמה" pattern=".{3,}" maxlength="35" required title="Between 4 to 35 characters" />
                </div>
            </div>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">כניסה</button>
                </div>
            </div>
    }

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - מערכת החזרים</p>
    </footer>
</div>

@section Scripts{
    @Html.Partial("_SaveScripts")
}
