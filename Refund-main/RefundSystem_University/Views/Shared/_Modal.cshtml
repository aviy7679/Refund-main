@model RefundSystem_University.ViewModels.ModalViewModel

<div id="@Model.Type-modal" class="modal fade" role="dialog" tabindex="-1" @*data-backdrop="static"*@ data-keyboard="false" aria-labelledby="headerModal">
    <div class="modal-dialog " role="document">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" @(string.IsNullOrEmpty(Model.CloseTarget) ? "" : $" data-target=#{Model.CloseTarget}-modal data-toggle=modal") data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="headerModal">@Model.Title</h5>
            </div>
            <div class="modal-body">
                @Html.Raw(Model.Body)
            </div>
            <div class="modal-footer">
                @if (!Model.HideButtons)
                {
                    <button type="button" class="btn btn-secondary pull-right" @(string.IsNullOrEmpty(Model.CloseTarget) ? "" : $" data-target=#{Model.CloseTarget}-modal data-toggle=modal") data-dismiss="modal">סגור</button>
                    <button type="button" class="btn btn-primary" @Html.Raw(!string.IsNullOrEmpty(Model.SaveFunction) ? ("onclick=\"" + Model.SaveFunction + "\"") : "") @(!string.IsNullOrEmpty(Model.SaveButtonId) ? "id=" + Model.SaveButtonId : "")>
                        @(string.IsNullOrEmpty(Model.SaveButtonText) ? "שמור" : Model.SaveButtonText)
                    </button>
                }
            </div>
        </div>
    </div>
</div>
